<%= render 'admin/admins' %>

<p>商品編集</p>
<%= form_with model: @item,url: admin_item_path(@item.id),method: :patch do |f| %>
<table>
 <tbody>
  <tr>
   <td><%= f.label :image,"商品画像" %></td>
   <td><%= f.file_field :image,accept:"image/*" %></td>
  </tr>
  
  <tr>
   <td><%= f.label :name,"商品名" %></td>
   <td><%= f.text_field :name %></td>
  </tr>
  
  <tr>
   <td><%= f.label :introduction,"商品説明" %></td>
   <td><%= f.text_area :introduction %></td>
  </tr>
  
  <tr>
   <td><%= f.label :genre_id,"ジャンル" %></td>
   <td><%= f.select :genre_id, Genre.all.map {|genre| [genre.name,genre.id]} %></td>
  </tr>
  
  <tr>
   <td><%= f.label :price,"税抜き価格" %></td>
   <td><%= f.number_field :price %>円</td>
  </tr>
  
  <tr>
   <td><%= f.label :is_active,"販売ステータス" %></td>
   <td><%= f.radio_button :is_active,true %>販売中  <%= f.radio_button :is_active,false %>販売停止中</td>
  </tr>
 </tbody>
</table>

<%= f.submit "変更を保存" %>
<% end %>