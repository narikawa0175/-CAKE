<div class="container">
 <div class="row p-5">
  <h5 class="bg-light px-3">新規会員登録</h5>
 </div>
 
 <%= form_with model: @customer,url: customer_registration_path,method: :post do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table class="table table-borderless col-8">
   <tbody>
    <tr>
     <td>名前</td>
     <td>(姓)　 <%= f.text_field :last_name,class:'form-control-sm',:placeholder=>"令和" %></td>
     <td>(名)　 <%= f.text_field :first_name,class:'form-control-sm',:placeholder=>"道子" %></td>
    </tr>
    <tr>
     <td>フリガナ</td>
     <td>(セイ) <%= f.text_field :last_name_kana,class:'form-control-sm',:placeholder=>"レイワ" %></td>
     <td>(メイ) <%= f.text_field :first_name_kana,class:'form-control-sm',:placeholder=>"ミチコ" %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td>　　　<%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control-sm',:placeholder=>"sample@example.com" %></td>
    </tr>
    <tr>
     <td>郵便番号(ハイフンなし)</td>
     <td>　　　<%= f.number_field :postal_code,class:'form-control-sm',:placeholder=>"0000000" %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td colspan="2">　　　<%= f.text_field :address,class:'form-control-sm',size:"56",:placeholder=>"東京都渋谷区代々木神園町０−０" %></td>
    </tr>
    <tr>
     <td>電話番号(ハイフンなし)</td>
     <td>　　　<%= f.number_field :telephone_number,class:'form-control-sm',:placeholder=>"00000000000" %></td>
    </tr>
    <tr>
     <td>パスワード(6文字以上)</td>
     <td>　　　<%= f.password_field :password, autocomplete: "new-password",class:'form-control-sm' %></td>
    </tr>
    <tr>
     <td>パスワード(確認用)</td>
     <td>　　　<%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control-sm' %></td>
    </tr>
    <tr>
     <td></td>
     <td>　　　<%= f.submit "新規登録",class:'btn btn-success px-5' %></td>
    </tr>
   </tbody>
  </table>
 <% end %>
 
 <div class="row p-5">
  <div>
   <h5 class="bg-light px-3">既に登録済みの方</h5>
   <p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>
  </div>
 </div>
</div>

<% render "public/shared/links" %>