<%= render 'admin/admins' %>

<div>
 <p>商品一覧</p>
 <%= link_to new_admin_item_path do %>
  +
 <% end %>
</div>

<table>
 <thead>
  <tr>
   <td>商品ID</td>
   <td>商品名</td>
   <td>税抜き価格</td>
   <td>ジャンル</td>
   <td>ステータス</td>
  </tr>
 </thead>
 <tbody>
  <% @items.each do |item| %>
  <tr>
   <td><%= item.id %></td>
   <td>
    <%= link_to admin_item_path(item.id) do %>
     <%= item.name %>
    <% end %>
   </td>
   <td><%= item.price %></td>
   <td><%= item.genre.name %></td>
   <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
  </tr>
  <% end %>
 </tbody>
</table>