<%= render 'public/publics' %>

<div class="container">
 <div class="row p-5">
  <h5 class="bg-light px-3">配送先登録/一覧</h5>
 </div>
 
 <%= form_with model: @address,url: create_address_path,nethod: :post do |f| %>
  <table class="table table-borderless col-6 mb-5">
   <tbody>
    <tr>
     <td>郵便番号(ハイフンなし)</td>
     <td><%= f.number_field :postal_code,class:'form-control border-dark',:placeholder=>"0000000" %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td colspan="2"><%= f.text_field :address,class:'form-control',:placeholder=>"東京都渋谷区代々木神園町０−０" %></td>
    </tr>
    <tr>
     <td>宛名</td>
     <td><%= f.text_field :name,class:'form-control',:placeholder=>"令和道子" %></td>
     <td><%= f.submit "新規登録" %></td>
    </tr>
   </tbody>
  </table>
 <% end %>
 
 <table class="table table-bordered border-dark col-7">
  <thead class="bg-light">
   <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
   </tr>
  </thead>
  <% @addresses.each do |address| %>
   <tbody>
    <tr>
     <td><%= address.postal_code %></td>
     <td><%= address.address %></td>
     <td><%= address.name %></td>
     <td><%= link_to "編集する",edit_address_path(address.id) %><%= link_to "削除する",destroy_address_path(address.id),method: :delete %></td>
    </tr>
   </tbody>
  <% end %>
 </table>
</div>