<%= render 'admin/admins' %>

<div class="container">
 <div class="row p-5">
  <h5 class="bg-light px-5"><strong>商品詳細</strong></h5>
 </div>

<%= image_tag @item.image,size:"250x170" %>
<table>
 <tbody>
  <tr>
   <td>商品名</td>
   <td><%= @item.name %></td>
  </tr>
  
  <tr>
   <td>商品説明</td>
   <td><%= @item.introduction %></td>
  </tr>
  
  <tr>
   <td>ジャンル</td>
   <td><%= @item.genre.name %></td>
  </tr>
  
  <tr>
   <td>税込価格</br>(税抜価格)</td>
   <td><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</td>
  </tr>
  
  <tr>
   <td>販売ステータス</td>
   <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
  </tr>
 </tbody>
</table>
</div>
<%= link_to "編集する",edit_admin_item_path(@item.id) %>