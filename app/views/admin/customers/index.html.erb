<%= render 'admin/admins' %>

<div class="container">
 <div class="row p-4">
  <h5 class="bg-light px-4">会員一覧</h5>
 </div>
 
 <div class="row justify-content-center">
  <table class="table col-8">
   <thead class="bg-light">
    <tr>
     <td>会員ID</td>
     <td>氏名</td>
     <td>メールアドレス</td>
     <td>ステータス</td>
    </tr>
   </thead>
   <tbody>
    <% @users.each do |user| %>
    <tr>
     <td><%= user.id %></td>
     <td>
      <%= link_to admin_customer_path(user.id),class:'text-dark border-bottom border-dark' do %>
       <%= user.last_name %><%= user.first_name %>
      <% end %>
     </td>
     <td><%= user.email %></td>
     <td class="text-success"><%= user.is_deleted ? '退会' : '有効' %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
 </div>
 <div class="row justify-content-center">
  <%= paginate @users %>
 </div>
</div>