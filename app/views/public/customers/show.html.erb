<%= render 'public/publics' %>

<div class="container">
 <div class="row p-5">
  <h5 class="bg-light px-3">マイページ</h5>
 </div>
 
 <div class="row mb-3">
  <h5><strong>登録情報</strong><%= link_to "編集する",edit_customer_path(@customer.id),class:'btn btn-success px-4 ml-4' %></h5>
 </div>
 
 <table class="table table-bordered col-6 mb-4">
  <tbody>
   <tr>
    <td class="bg-light">氏名</td>
    <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
   </tr>
   <tr>
    <td class="bg-light">カナ</td>
    <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
   </tr>
   <tr>
    <td class="bg-light">郵便番号</td>
    <td><%= @customer.postal_code %></td>
   </tr>
   <tr>
    <td class="bg-light">住所</td>
    <td><%= @customer.address %></td>
   </tr>
   <tr>
    <td class="bg-light">電話番号</td>
    <td><%= @customer.telephone_number %></td>
   </tr>
   <tr>
    <td class="bg-light">メールアドレス</td>
    <td><%= @customer.email %></td>
   </tr>
  </tbody>
 </table>
 
 <div class="row mb-3">
  <h5><strong>配送先　</strong></h5>
  <%= link_to "一覧を見る",addresses_path(@customer.id),class:'btn btn-primary px-4 ml-5' %>
 </div>
 
 <div class="row mb-5">
  <h5><strong>注文履歴</strong></h5>
  <%= link_to "一覧を見る",orders_path,class:'btn btn-primary px-4 ml-5' %>
 </div>
</div>