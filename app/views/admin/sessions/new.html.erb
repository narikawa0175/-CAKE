<div class="container">
 <div class="row p-5">
  <h5 class="bg-light px-5"><strong>管理者</strong>ログイン</h5>
 </div>
 
 <div class="row">
  <div class="mx-auto">
   <%= form_with model: @admin,url: admin_session_path,method: :post do |f| %>
    <table class="table table-borderless mb-5">
     <tbody>
      <tr>
       <td><%= f.label "メールアドレス",class:'mr-5' %></td>
       <td><%= f.email_field :email, autofocus: true, autocomplete: "email",size:"40" %></td>
      </tr>
      <tr>
       <td><%= f.label "パスワード",class:'' %></td>
       <td><%= f.password_field :password, autocomplete: "current-password",size:"40" %></td>
      </tr>
      <tr>
       <td></td>
       <td><%= f.submit "ログイン",class:'mt-4 px-5 btn btn-primary' %></td>
      </tr>
     </tbody>
    </table>
   <% end %>
  </div>
 </div>
</div>

<%= render "admin/shared/links" %>
