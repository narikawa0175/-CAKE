<%= render 'admin/admins' %>

<p><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</p>

<table>
 <tbody>
  <tr>
   <td>会員ID</td>
   <td><%= @user.id %></td>
  </tr>
  
  <tr>
   <td>氏名</td>
   <td><%= @user.last_name %> <%= @user.first_name %></td>
  </tr>
  
  <tr>
   <td>フリガナ</td>
   <td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
  </tr>
  
  <tr>
   <td>郵便番号</td>
   <td><%= @user.postal_code %></td>
  </tr>
  
  <tr>
   <td>住所</td>
   <td><%= @user.address %></td>
  </tr>
  
  <tr>
   <td>電話番号</td>
   <td><%= @user.telephone_number %></td>
  </tr>
  
  <tr>
   <td>メールアドレス</td>
   <td><%= @user.email %></td>
  </tr>
  
  <tr>
   <td>会員ステータス</td>
   <td><%= @user.is_active ? '有効' : '退会' %></td>
  </tr>
 </tbody>
</table>

<%= link_to "編集する",edit_admin_customer_path(@user.id) %>
<%= link_to "注文履歴一覧を見る",admin_path %>