<% if customer_signed_in? %>
 <%= render 'public/publics' %>
<% end %>

<div class="container">
 <div class="row p-5">
  <h3><strong>商品一覧</strong></h3>
  <p class="m-2"><strong>(全<%= @items.count %>件)</strong></p>
 </div>
 
 <div>
  <div class="d-flex flex-wrap">
   <% @items.each do |item| %>
    <div class="mx-2 mb-5">
     <%= link_to item_path(item.id) do %>
      <%= image_tag item.image,size:"200x120" %></br>
     <% end %>
     <%= item.name %></br>
     ￥<%= item.price.to_s(:delimited) %>
    </div>
   <% end %>
  </div>
  <div class="row justify-content-center">
   <%= paginate @items %>
  </div>
 </div>
</div>
