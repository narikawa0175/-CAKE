<%= render 'admin/admins' %>

<div class="container">
 <div class="row p-5">
  <div class="text-left">
   <h5 class="bg-light px-3"><strong>商品一覧</strong></h5>
  </div>
  <div class="ml-auto">
   <button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">
    <%= link_to new_admin_item_path,class:'text-secondary' do %><strong> ＋ </strong><% end %>
   </button>
  </div>
 </div>
 <div class="row">
  <table class="table table-borderless mx-auto">
   <thead>
    <tr class="bg-light border-top">
     <td><strong>商品ID</strong></td>
     <td><strong>商品名</strong></td>
     <td><strong>税抜価格</strong></td>
     <td><strong>ジャンル</strong></td>
     <td><strong>ステータス</strong></td>
    </tr>
   </thead>
   <tbody>
    <% @items.each do |item| %>
    <tr>
     <td><%= item.id %></td>
     <td>
      <%= link_to admin_item_path(item.id),class:'text-dark border-bottom border-dark' do %>
       <%= item.name %>
      <% end %>
     </td>
     <td><%= item.price.to_s(:delimited) %></td>
     <td><%= item.genre.name %></td>
     <td class="text-success"><%= item.is_active ? '販売中' : '販売停止中' %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
 </div>
 <div class="row justify-content-center">
  <%= paginate @items %>
 </div>
</div>