<%= render 'admin/admins' %>

<p>注文履歴一覧</p>

<table class="table">
 <thead>
  <tr>
   <td>購入日時</td>
   <td>購入者</td>
   <td>注文個数</td>
   <td>注文ステータス</td>
  </tr>
 </thead>
 
 <tbody>
  <% @orders.each do |order| %>
  <tr>
   <td>
    <%= link_to admin_order_path(order.id) do %>
     <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
    <% end %>
   </td>
   <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
   <td>
    <% order.order_datails.each do |orders| %>
     <%= orders.amount %>
    <% end %>
   </td>
   <td><%= order.making_status %></td>
  </tr>
  <% end %>
 </tbody>
</table>