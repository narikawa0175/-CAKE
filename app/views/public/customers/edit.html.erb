<%= render 'public/publics' %>

<div class="container">
 <div class="row p-5">
  <h5 class="bg-light px-3">会員情報編集</h5>
 </div>
 
 <%= form_with model: @customer,url: update_customer_path,method: :patch do |f| %>
  <table class="table table-borderless col-8">
   <tbody>
    <tr>
     <td>氏名</td>
     <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
    </tr>
    <tr>
     <td>フリガナ</td>
     <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
     <td>郵便番号</td>
     <td><%= f.number_field :postal_code %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td><%= f.text_field :address %></td>
    </tr>
    <tr>
     <td>電話番号</td>
     <td><%= f.number_field :telephone_number %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= f.email_field :email %></td>
    </tr>
    <tr>
     <td></td>
     <td><%= f.submit "編集内容を保存" %></td>
     <td><%= link_to "退会する",unsubscribe_customer_path %></td>
    </tr>
   </tbody>
  </table>
 <% end %>
</div>