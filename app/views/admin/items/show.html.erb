<%= render 'admin/admins' %>

<div class="container">
 <div class="row p-5">
  <h5 class="bg-light px-5">商品詳細</h5>
 </div>

 <div class="row">
  <%= image_tag @item.image,size:"260x170",class:"mr-5" %>
 
  <table class="table table-borderless col-4 ml-4">
   <tbody>
    <tr>
     <td>商品名</td>
     <td><%= @item.name %></td>
    </tr>
    <tr>
     <td>商品説明</td>
     <td><%= @item.introduction %></td>
    </tr>
    <tr>
     <td>ジャンル</td>
     <td><%= @item.genre.name %></td>
    </tr>
    <tr>
     <td>税込価格</br>(税抜価格)</td>
     <td style="vertical-align: middle;"><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</td>
    </tr>
  
    <tr>
     <td>販売ステータス</td>
     <td class="text-success"><%= @item.is_active ? '販売中' : '販売停止中' %></td>
    </tr>
   </tbody>
  </table>
 </div>
 <div class="text-center m-4">
  <%= link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-lg btn-success px-4" %>
 </div>
</div>